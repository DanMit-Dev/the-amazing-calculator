
{
  "name": "the-amazing-calculator",
  "version": "v1.0.0",
  "description": "The best offline open-source calculator app in the world.",
  "main": "dist/main.js",
  "author": "Daniel Mitsuo / DanMit",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "dist": "electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "mathjs": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.theamazing.calculator",
    "productName": "The Amazing Calculator",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "assets/icons/png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icons/mac/icon.icns"
    }
  }
}
